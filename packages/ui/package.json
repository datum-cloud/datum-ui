{
	"name": "@repo/ui",
	"version": "0.0.0",
	"private": true,
	"sideEffects": [
		"**/*.css"
	],
	"exports": {
		"./styles.css": "./dist/index.css",
		"./button": "./src/button.tsx",
		"./text-input": "./src/text-input.tsx",
		"./card": "./src/card.tsx",
		"./code": "./src/code.tsx",
		"./simple-form": "./src/simple-form.tsx",
		"./my-session": "./src/utils/session.ts"
	},
	"scripts": {
		"build": "tailwindcss -i ./src/styles.css -o dist/index.css",
		"lint": "eslint src/",
