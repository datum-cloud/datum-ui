    "@tailwindui/react": "latest",
    "@tailwindcss/forms": "latest",
    "@types/node": "latest",
    "@types/eslint": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "autoprefixer": "latest",
    "clsx": "latest",
    "eslint": "latest",
    "postcss": "latest",
    "react": "latest",
    "tailwindcss": "latest",
    "tailwind-variants": "latest",
    "tsup": "latest",
    "typescript": "latest"
  }
