		"type-check": "tsc --noEmit"
	},
	"peerDependencies": {
		"react": "latest"
	},
	"devDependencies": {
		"@mui/base": "latest",
		"@repo/eslint-config": "workspace:*",
		"@repo/tailwind-config": "workspace:*",
		"@types/node": "latest",
		"@types/eslint": "latest",
		"@types/react": "latest",
		"@types/react-dom": "latest",
		"autoprefixer": "latest",
		"clsx": "latest",
		"eslint": "latest",
		"postcss": "latest",
		"react": "latest",
		"tailwindcss": "latest",
		"tsup": "latest",
		"typescript": "latest"
	}
