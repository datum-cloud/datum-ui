{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Next.js",
	"extends": "./base.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"allowJs": true,
		"declaration": false,
		"declarationMap": false,
		"incremental": true,
		"jsx": "preserve",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"esnext"
		],
		"module": "esnext",
		"resolveJsonModule": true,
		"strict": true,
		"target": "es5",
		"downlevelIteration": true,
	},
	"include": [
		"src",
		"next-env.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}