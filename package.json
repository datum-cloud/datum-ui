{
  "name": "datum-ui",
  "version": "1.0.0",
  "description": "A monorepo for Datum UI apps and supporting libraries",
  "repository": "git@github.com:datumforge/datum-ui.git",
  "author": "datum <info@datum.net>",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "type-check": "turbo type-check",
    "clean": "rm -rf node_modules/** && rm -rf ./apps/operator/.next && rm -rf ./apps/docs/.next && turbo clean",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "dotenv-cli": "latest",
    "eslint": "latest",
    "prettier": "latest",
    "prettier-plugin-tailwindcss": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.15",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": { "@headlessui/react": "^1.7.18", "@headlessui/tailwindcss": "^0.2.0", "@radix-ui/react-dialog": "^1.0.5", "@remixicon/react": "^4.2.0", "@tailwindcss/forms": "^0.5.7", "@tremor/react": "latest", "lucide-react": "^0.367.0", "tailwindcss": "latest" }
}
